{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "root",
          "style": "diamond",
          "background": "#ffffff",
          "foreground": "#0c0c0d",
          "template": " \uf13e ",
          "trailing_diamond": "\ue0b0"
        },
        {
          "type": "root",
          "style": "plain",
          "background": "#1c1c1f",
          "foreground": "#0c0c0d",
          "template": "\ue0b0"
        },
        {
          "type": "session",
          "style": "diamond",
          "background": "#1c1c1f",
          "foreground": "#4e515d",
          "template": " {{ .UserName }} "
        },
        {
          "type": "text",
          "style": "plain",
          "background": "#1c1c1f",
          "foreground": "#5b5e6b",
          "template": "\uf08a "
        },
        {
          "type": "session",
          "style": "diamond",
          "background": "#1c1c1f",
          "foreground": "#4e515d",
          "template": " {{ .HostName }} ",
          "trailing_diamond": "\ue0b0"
        },
        {
          "type": "path",
          "style": "powerline",
          "background": "#e5b60b",
          "foreground": "#0c0c0d",
          "template": " {{ .Path }} ",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "folder_icon": "\uf115",
            "folder_separator_icon": " \ue0b1 ",
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "background": "#d9165d",
          "foreground": "#0c0c0d",
          "template": "\ue0b0"
        },
        {
          "type": "git",
          "style": "diamond",
          "background": "#d9165d",
          "foreground": "#0c0c0d",
          "template": " {{ .HEAD }} ",
          "trailing_diamond": "\ue0b0",
		  "properties": {
			  "branch_icon":"\uf126 "
		  }
        },
        {
          "type": "exit",
          "style": "plain",
          "background": "#cc1a0a",
          "foreground": "#0c0c0d",
          "template": "\ue0b0"
        },
        {
          "type": "exit",
          "style": "diamond",
          "background": "#cc1a0a",
          "foreground": "#0c0c0d",
          "template": " \uf0e7 ERROR ",
          "trailing_diamond": "\ue0b0"
        },
        {
          "type": "text",
          "style": "plain",
          "background": "#1c1c1f",
          "foreground": "#0c0c0d",
          "template": "\ue0b0"
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "background": "#1c1c1f",
          "foreground": "#4e515d",
          "template": " \uf64f {{ .FormattedMs }}\u2800",
          "properties": {
            "style": "roundrock",
            "threshold": 0
          },
          "trailing_diamond": "\ue0b0"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#ffffff",
          "template": " \ufb0c "
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}}root: {{end}}{{ .Shell }} in {{ .Folder }}",
  "final_space": false,
  "version": 2
}